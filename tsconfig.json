{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "rootDir": "./src",
    "outDir": "./dist",
    /* Modules */
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  }
}
