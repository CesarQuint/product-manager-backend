generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma/client"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id          Int      @id @default(autoincrement())
  first_name  String
  last_name_p String
  last_name_m String
  email       String   @unique
  password    String
  products    Product[]
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  price       Float
  company     Company
  category    String
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
}

enum Company {
  Amazon
  Walmart
  HEB
  Chedraui
}

